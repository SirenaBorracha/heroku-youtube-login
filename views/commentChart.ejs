            var ctx = document.getElementById("myChart").getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels:  [ 'emotional', 'questions' ],
                    datasets: [{
                        label: [ 'emotional' ],
                        data: [  <%= comments.filter( c => c.color === 'rgb(255, 99, 132)').length %>, <%= comments.filter( c => c.color === 'rgb(54, 162, 235)').length %> ] ,
